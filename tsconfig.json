{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "studio/**", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@data/*": ["src/data/*"]
    },
    "jsx": "react"
  }
}
